<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.voicemynews.voicemynews.components.IndividualNewsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/individual_news_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/news_headline_font_size"/>

        <LinearLayout
            android:id="@+id/individual_news_contributed_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/news_contributed_by_section_padding_top"
            android:paddingBottom="@dimen/news_contributed_by_section_padding_top"
            android:orientation="vertical"/>

        <ListView
            android:id="@+id/individual_news_paragraphs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:paddingTop="@dimen/news_paragraphs_section_padding_top"
            android:paddingBottom="@dimen/news_paragraphs_section_padding_bottom"
            android:listSelector="@android:color/transparent"
            android:clickable="false"></ListView>
    </LinearLayout>

</FrameLayout>
