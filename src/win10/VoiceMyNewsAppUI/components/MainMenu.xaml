<UserControl
    x:Class="voicemynews.app.win10.components.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:voicemynews.app.win10.converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="200">

    <UserControl.Resources>
        <converters:JsonObjectConverter x:Key="jsonObjectConverter" />
    </UserControl.Resources>
    
    <StackPanel Orientation="Vertical" Width="Auto" Height="Auto">
        <Button Background="Transparent" Content="&#xE700;" Width="50" Height="50"
                        FontFamily="Segoe MDL2 Assets" Click="OpenMenu" />

        <ListView ItemsSource="{Binding MenuItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource jsonObjectConverter},
                        ConverterParameter='label'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
